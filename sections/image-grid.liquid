<style>
   @media screen and (min-width: 750px){
     img{
       margin: auto;
     }

   .destopImg{
      display: block;
       width: 100%;
       height: 100%;
     padding: 10px;
    }
     .image_Right{
       height: 50%;
     }
    .mobileImg{
      display: none;
    }
     .imageOutside{
       display: flex;
       justify-content: center;
       padding: 200px;
        /* align-items: center; */
               height: 1000px;
     }
     .imageSectionRight{
       display: flex;
       flex-direction: column;
        width: 50%;
    height: 100%;
     }
  .imageSectionLeft{
    width: 50%;
    height: 100%;
  }

   }

  @media screen and (max-width: 749px){
    .destopImg{
      display: none
    }
    .mobileImg{
      display: block;
    }
    .imageOutside{
       display: flex;
       justify-content: center;
      width: 100%;
      flex-direction: column-reverse;
      padding: 0;
    }
     .imageSectionRight{
       display: flex;

     }
     .image_Right{
       width: 50%;
     }
    .mobileImg{
      width: 100%;
      padding: 5px;
    }
  }
</style>
<div class="imageOutside">
  <div class="imageSectionLeft">
    <a href="{{ section.settings.collection1.url }}">
      <img
        src="{{ section.settings.collection1.featured_image | image_url }}"
        width=""
        height=""
        class="destopImg"
      >
      <img src="{{ section.settings.collection1.featured_image | image_url }}" width="" height="" class="mobileImg">
    </a>
  </div>
  <div class="imageSectionRight">
    <div class="image_Right imageSectionRight1">
      <a href="{{ section.settings.collection2.url }}">
        <img src="{{ section.settings.collection2.featured_image | image_url }}" width="" height="" class="destopImg">
        <img src="{{ section.settings.collection2.featured_image | image_url }}" width="" height="" class="mobileImg">
      </a>
    </div>
    <div class="image_Right imageSectionRight2">
      <a href="{{ section.settings.collection3.url }}">
        <img src="{{ section.settings.collection3.featured_image | image_url }}" width="" height="" class="destopImg">
        <img src="{{ section.settings.collection3.featured_image | image_url }}" width="" height="" class="mobileImg">
      </a>
    </div>
  </div>
</div>

